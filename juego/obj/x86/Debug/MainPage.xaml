<Page
    x:Class="juego.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:juego"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <SolidColorBrush x:Key="Green" Color="#00FF00"></SolidColorBrush>
        <SolidColorBrush x:Key="AzulBackground" Color="#6BE1FB"></SolidColorBrush>
        <SolidColorBrush x:Key="RojoBackground" Color="#F78C8C"></SolidColorBrush>
    </Page.Resources>


    <Grid AutomationProperties.PositionInSet="1">
        <TextBox x:ConnectionId='2' x:Name="Azul" HorizontalAlignment="Left" Margin="249,10,0,0" Text="50" TextWrapping="Wrap" VerticalAlignment="Top" Height="99" Width="300" FontSize="72" IsReadOnly="True" TextAlignment="Center" FontWeight="Bold" Foreground="#1872F3" Background="#6BE1FB"/>
        <TextBox x:ConnectionId='3' x:Name="Rojo" HorizontalAlignment="Left" Margin="903,10,0,0" Text="50" TextWrapping="Wrap" VerticalAlignment="Top" Height="99" Width="300" FontSize="72" IsReadOnly="True" TextAlignment="Center" FontWeight="Bold" Foreground="#FF2020" Background="#F78C8C"/>
        <Canvas x:ConnectionId='4' x:Name="canvas" Background="AliceBlue" Margin="10,114,10,10" />
        <Button x:ConnectionId='5' x:Name="starter" Content="START" Margin="609,16,0,0" VerticalAlignment="Top" Height="92" Width="246" FontSize="48"                      />
    </Grid>
</Page>

